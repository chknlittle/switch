{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "glm_vllm": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "OpenAI-compatible vLLM",
      "options": {
        "baseURL": "http://127.0.0.1:8002/v1"
      },
      "models": {
        "glm-4.7-flash-heretic.Q8_0.gguf": {
          "name": "GLM 4.7 Flash Heretic (Q8_0 GGUF)",
          "limit": {
            "context": 202752,
            "output": 8192
          },
          "options": {
            "maxTokens": 8192,
            "reasoning": {
              "enabled": false
            }
          }
        }
      }
    }
  },
  "agent": {
    "bridge": {
      "mode": "primary",
      "description": "XMPP bridge agent",
      "model": "glm_vllm/glm-4.7-flash-heretic.Q8_0.gguf",
      "default": true,
      "permission": "allow",
      "options": {
        "stream": true
      }
    }
  }
}
